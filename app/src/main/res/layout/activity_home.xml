<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEC759"
    android:padding="10dp"
    tools:context=".Home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/formboxprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/background_profile"
                android:elevation="15dp">
                <TextView
                    android:id="@+id/usernameprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Username"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:id="@+id/backgroud_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usernameprofile"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/nametag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/backgroud_username"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Nama"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/equal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/backgroud_username"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="65dp"
                    android:text=":"/>
                <TextView
                    android:id="@+id/nameprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/backgroud_username"
                    android:layout_toEndOf="@+id/equal1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Nama"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/emailtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameprofile"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Email"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/equal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameprofile"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="65dp"
                    android:text=":"/>
                <TextView
                    android:id="@+id/emailprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameprofile"
                    android:layout_toEndOf="@+id/equal2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Email"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/addresstag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailprofile"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Alamat"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/equal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailprofile"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="65dp"
                    android:text=":"/>
                <TextView
                    android:id="@+id/addressprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailprofile"
                    android:layout_toEndOf="@+id/equal3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="Alamat"
                    android:textSize="14dp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/updateprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/formboxprofile"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_profilebutton"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:text="Pengaturan Profile"/>
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/formboxprofile"
                android:layout_toEndOf="@+id/updateprofil"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_profilebutton"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:text="Log out"/>
            <RelativeLayout
                android:id="@+id/list_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logout"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/background_profile">
                <TextView
                    android:id="@+id/teks_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="Daftar Menu Makanan"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teks_menu">
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
            <Button
                android:id="@+id/list_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_menu"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_profilebutton"
                android:text="Daftar Pesanan"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>